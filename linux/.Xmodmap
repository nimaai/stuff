! remap caps lock to escape
remove Lock = Caps_Lock
keysym Caps_Lock = Escape

! remap right windows key to control
! remove mod4 = Super_R
! add control = Super_R

! remap altgr to alt
clear mod5
add mod1 = Mode_switch
keysym ISO_Level3_Shift = Alt_L

! remap menu to control
keysym Menu = Control_R
add Control = Control_R
