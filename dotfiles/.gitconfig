[alias]
        cf = "!f() { git commit --fixup=$1; }; f"
[alias]
        cp = cherry-pick
[alias]
        cpn = cherry-pick --no-commit
[alias]
        cpa = cherry-pick --abort
[alias]
        cpc = cherry-pick --continue
[alias]
        patch = "!f() { git add . && git can && git psf; }; f"
[alias]
        s = status --ignore-submodules=untracked
[alias]
        sw = switch
