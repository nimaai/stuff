        ma = merge --abort
[alias]
        ms = merge --squash
[alias]
        mbom = merge-base HEAD origin/master
[alias]
        r = rebase
[alias]
        rc = rebase --continue
[alias]
        ra = rebase --abort
[alias]
        rs = rebase --skip
[alias]
        ri = rebase --interactive
[alias]
        rom = rebase origin/master
[alias]
        riom = rebase --interactive origin/master
[alias]
        ria = rebase --interactive --autosquash
