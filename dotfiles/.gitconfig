        rhom = reset --hard origin/master
[alias]
        sur = submodule update --recursive
[alias]
        suri = submodule update --recursive --init
[alias]
        sh = show --ext-diff
[alias]
        ssm = "!f() { git submodule summary | colorss; }; f"
[alias]
        ss = submodule status
[alias]
        ssr = submodule status --recursive
[alias]
        sp = stash pop
[alias]
        sd = stash drop
[alias]
        sl = stash list
[alias]
        f = fetch --all
[alias]
        fr = fetch --all --recurse-submodules
[alias]
        rp = rev-parse
[alias]
        rp = rev-parse
[alias]
        bc = "!f() { hub browse -- commits/$(git rev-parse $1); }; f"
[alias]
        ci = "!f() { gh pr checks; }; f"

[color]
        branch = auto
        diff = auto
        status = auto

[color "status"]
        added = yellow
        changed = blue
        untracked = cyan

[core]
        editor = nvim
	excludesfile = /Users/nitaai/.gitignore
[push]
        default = current
        recurseSubmodules = on-demand

[commit]
        gpgsign = true
[gpg]
	program = /opt/homebrew/bin/gpg
[remote "origin"]
	prune = true
[pull]
	rebase = true
[diff]
	external = difft
[merge]
        ff = true
[mergetool "vimdiff"]
        layout = REMOTE,BASE,LOCAL
