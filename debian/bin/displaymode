#!/bin/bash

case "$1" in
        dual) ~/.screenlayout/dual-monitor.sh
                ;;
        single) ~/.screenlayout/single-monitor.sh
                ;;
        *) echo "Invalid layout"
                ;;
esac

pkill stalonetray
stalonetray --icon-gravity W --geometry 6x1-0+0 --max-geometry 6x1+0+0 --background "#000000" --skip-taskbar --icon-size 20 --kludges force_icons_size --window-strut none &
xmodmap ~/.Xmodmap
