#!/bin/bash

case "$1" in
        dual) ~/.screenlayout/dual-monitor.sh
                ;;
        single) ~/.screenlayout/single-monitor.sh
                ;;
        *) echo "Invalid layout"
                ;;
esac

tint2restart

sleep 1s
conkywonky

sleep 1s
nitrogen --restore

sleep 1s
cb-compositor --restart

sleep 1s
xmodmap ~/.Xmodmap
